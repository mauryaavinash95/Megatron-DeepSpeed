{
	"train_batch_size": 256,
	"train_micro_batch_size_per_gpu": 8,
	"steps_per_print": 1,
    "optimizer": {
		"type": "Adam",
		"params": {
			"lr": 0.001,
			"betas": [
			0.8,
			0.999
			],
			"eps": 1e-8,
			"weight_decay": 3e-7
		}
	},
	"zero_optimization": {
		"stage": 3,
        "overlap_comm": true,
		"offload_optimizer": {
			"device": "cpu",
			"pin_memory": true
		}
	},
	"bf16": {
		"enabled": true
	},
	"data_types": {
		"grad_accum_dtype": "fp32"
 	},
	"wall_clock_breakdown": true,
	"memory_breakdown": true,
	"flops_profiler": {
		"enabled": false
	}
}
